# Download all scripts and then allocate them
curl -o /sdcard/.NTSH/plugins/batt.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/plugins/batt.sh" > /dev/null 2>&1
curl -o /sdcard/.NTSH/plugins/doze.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/plugins/doze.sh" > /dev/null 2>&1
curl -o /sdcard/.NTSH/plugins/gapp.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/plugins/gapp.sh" > /dev/null 2>&1
curl -o /sdcard/.NTSH/plugins/swap.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/plugins/swap.sh" > /dev/null 2>&1
curl -o start.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/start.sh" > /dev/null 2>&1

chipset=$(grep "Hardware" /proc/cpuinfo | uniq | cut -d ':' -f 2 | sed 's/^[ \t]*//')
if [ -z "$chipset" ]; then
    chipset=$(getprop "ro.hardware")
fi

if [[ $chipset == *MT* ]] || [[ $chipset == *mt* ]]; then
    curl -o /sdcard/.NTSH/plugins/mtkf.sh "https://raw.githubusercontent.com/haxislancelot/Nightshade/beta/plugins/mtkf.sh" > /dev/null 2>&1
    am start -a android.intent.action.MAIN -e toasttext "Main script and plugins updated successfully!" -n bellavita.toast/.MainActivity
else
    am start -a android.intent.action.MAIN -e toasttext "Main script and plugins updated successfully!" -n bellavita.toast/.MainActivity
fi
